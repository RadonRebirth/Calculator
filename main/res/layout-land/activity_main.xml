<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_74_5"
    android:focusableInTouchMode="true"
    android:focusedByDefault="true"
    android:forceHasOverlappingRendering="true"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="290dp"
        android:layout_height="87dp"
        android:layout_marginEnd="221dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="#3A3735"
        android:onClick="onClick"
        android:text="Сложить"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="168dp"
        android:layout_height="29dp"
        android:layout_marginEnd="413dp"
        android:layout_marginBottom="25dp"
        android:background="#3A3735"
        android:text="Калькулятор"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="75dp"
        android:layout_height="27dp"
        android:layout_marginEnd="221dp"
        android:layout_marginBottom="28dp"
        android:background="#00FFFF"
        android:backgroundTint="#3A3735"
        android:ems="10"
        android:inputType="number"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="75dp"
        android:layout_height="27dp"
        android:layout_marginEnd="221dp"
        android:layout_marginBottom="33dp"
        android:background="#3A3735"
        android:backgroundTint="#3A3735"
        android:ems="10"
        android:inputType="number"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumber2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="28dp"
        android:background="#3A3735"
        android:text="Введите второе слагаемое"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/editTextNumber2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="39dp"
        android:background="#3A3735"
        android:text="Введите первое слагаемое"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/editTextNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>